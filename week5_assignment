Task 4 :- Copy selective tables with selective columns from one database to another

create database selective_table;

select id,name,salary into selective_table.dbo.employees from himanshudb.dbo.employee1;

select deptid,deptname into selective_table.dbo.department from himanshudb.dbo.department;

select id,name into selective_table.dbo.student from himanshudb.dbo.student;

select productsalesid,quantitysold into selective_table.dbo.productsales from himanshudb.dbo.tb1productsales;
